{
  "env": {
      "node": true,
      "es6": true,
      "browser": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "jsx": true,
        "forOf": true,
        "blockBindings": true,
        "arrowFunctions": true,
        "classes": true,
        "defaultParams": true,
        "legacyDecorators": true,
        "destructuring": true,
        "generators": true,
        "restParams": true,
        "spread": true,
        "superInFunctions": true,
        "templateStrings": true,
        "experimentalObjectRestSpread": true
      }
  },
  "rules": {
      "indent": [
          "error",
          2
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "never"
      ],
      "eol-last": [
          "error", 
          "always"
      ],
      "no-trailing-spaces": [
          "error"
      ],
      "no-console": [
          "error",
          { "allow": ["warn", "error", "info"] }
      ]
  }
}